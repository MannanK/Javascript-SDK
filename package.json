{
  "name": "feed-media-audio-player",
  "version": "2.0.0",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve html"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-uglify": "^6.0.0",
    "serve": "^10.0.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "js-base64": "^2.4.9",
    "lodash": "^4.17.11",
    "lodash.uniqueid": "^4.0.1",
    "tiny-cookie": "^2.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaFeatures": {},
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}